
		<h2>User info</h2>
		<%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
		<table>
			<tbody>
				<tr>
					<th>name</th>
					<th><%= @user.name %></th>
				</tr>
				<tr>
					<th>introduction</th>
					<th><%= @user.introduction %></th>
				</tr>
			</tbody>
		</table>

		<div class="row">
			<% if current_user.id == @user.id %>
			<%= link_to edit_user_path(@user.id), class: "edit_user_#{@user.id} col-xs-12 btn btn-default" do %><i class="glyphicon glyphicon-wrench"></i><% end %>
			<% end %>
			<% if current_user.id != @user.id %>
			<%= link_to user_path(current_user.id), class: "user_#{@user.id} col-xs-12 btn btn-default" do %><i class="glyphicon glyphicon-wrench"></i><% end %>
			<% end %>

		</div>
	


			
<div class="body">
	<div class="container">
		<p id="notice"></p>
		<div class="row">
			<div class="col-md-6 col-md-offset-3">
				<h2>Editing Book</h2>
				<%= form_for(@book) do |f| %>
					<% if @book.errors.any? %>
						<div id="error_explanation" class="alert alert-danger">
					      <h2><%= pluralize(@book.errors.count, "error") %> prohibited this post from being saved:</h2>
					      <ul>
					      <% @book.errors.full_messages.each do |message| %>
					        <li><%= message %></li>
					      <% end %>
					      </ul>
					    </div>
					<% end %>

					<div class="field row">
				    	<label >Title</label>
					    <%= f.text_field :title, class: "book_title col-xs-12" %>
					</div>
					<div class="field row">
						<label>Opinion</label>
						<%= f.text_area :opinion, class: "book_body col-xs-12" %>
					</div>
					<div class="action row">
					<%= f.submit "Update Book", class: "btn btn-primary col-xs-12" %>
					</div>
				<% end %>
				<%= link_to "Show", book_path(@book.id), class: "book_#{@book.id}" %>
				|
				<%= link_to "Back", books_path, class: "back" %>
			</div>
		</div>
	</div>
</div>
<h2>Books</h2>
<table class="table-hover">
	<thead>
		<tr>
			<th></th>
			<th>Title</th>
			<th>Opinion</th>
		</tr>
	</thead>
	<tbody>
		<% @books.each do |book| %>
			<tr>
				<td><%= link_to attachment_image_tag(@user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg"),user_path(@user.id)   %></td>
				<td><%= link_to book.title, book_path(book.id), class: "book.title"  %></td>
				<td><%= book.opinion %></td>
			</tr>
		<% end %>
	</tbody>
</table>

